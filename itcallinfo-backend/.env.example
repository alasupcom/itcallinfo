# ITCallInfo Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=production

# Database Configuration
DB_HOST=your-database-host
DB_PORT=3306
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_NAME=your-database-name

# SIP Gateway Configuration
SIP_GATEWAY_URL=http://your-sip-gateway-host:3000/api/sip-config
SIP_GATEWAY_TIMEOUT=10000

# SIP Username Range Configuration
TEST_SIP_RANGE=true

# Deployment Configuration
DEPLOYMENT_HOST=your-deployment-server-host
DEPLOYMENT_USER=your-deployment-user
DEPLOYMENT_PATH=/var/www/html/itcallinfo-api

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password
ADMIN_EMAIL=admin@yourdomain.com

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Session Configuration
SESSION_SECRET=your-production-session-secret-key-here
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Storage Configuration
STORAGE_TYPE=database

# Security Configuration
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Client Configuration
CLIENT_URL=https://yourdomain.com
API_BASE_URL=https://yourdomain.com/api 