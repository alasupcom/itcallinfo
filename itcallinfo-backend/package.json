{
  "name": "itcallinfo-backend",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "start": "NODE_ENV=production node dist/server/index.js",
    "dev": "NODE_ENV=development tsx watch server/index.ts",
    "build": "npm run clean && npm run build:server && npm run build:copy",
    "build:server": "tsc -p tsconfig.server.json",
    "build:copy": "npm run copy:shared && npm run copy:config && npm run copy:env && cp -r scripts dist/",
    "copy:shared": "cp -r dist/shared dist/server/",
    "copy:config": "cp package.json package-lock.json drizzle.config.ts drizzle.config.server.ts dist/",
    "copy:env": "cp .env.production dist/.env",
    "clean": "rm -rf dist",
    "setup:admin": "node scripts/setup-admin.js",
    "db:push": "drizzle-kit push",
    "db:push:server": "drizzle-kit push --config=drizzle.config.server.ts",
    "deploy": "npm run build && npm run setup:admin && npm run deploy:compress && npm run deploy:upload",
    "deploy:compress": "cd dist && tar -czf ../itcallinfo-backend-build.tar.gz . && cd ..",
    "deploy:upload": "bash scripts/deploy.sh"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.7.1",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "memorystore": "^1.6.7",
    "mysql2": "^3.14.1",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "ssh2": "^1.16.0",
    "twilio": "^5.6.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/firebase": "^2.4.32",
    "@types/node": "^22.15.17",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "~5.7.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
