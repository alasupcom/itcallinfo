{
  "include": ["client/src/**/*", "server/**/*", "public/**/*", "shared/**/*"],
  "exclude": ["node_modules", "build", "client/dist", "**/*.test.ts", "dist"],
  "compilerOptions": {
    "incremental": true,
    "noEmit": true,
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "client/src/types"],
    "paths": {
      "@/*": ["client/src/*"]
    }
  }
}